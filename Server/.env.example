# Server Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/inventory
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10

# Security
JWT_SECRET=your-super-secret-key-min-32-chars-long
JWT_EXPIRATION=24h
ADMIN_API_KEY=your-admin-api-key-for-monitoring

# Client Configuration
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true
ERROR_MONITORING_SERVICE=false  # Set to true if using error monitoring service

# Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT=5000    # 5 seconds

# Error Handling
DETAILED_ERRORS_IN_DEVELOPMENT=true
ERROR_STACK_IN_DEVELOPMENT=true
